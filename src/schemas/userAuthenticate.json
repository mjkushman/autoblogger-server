{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "Authenticate / Login User",
    "required": [
        "username",
        "password"
    ],
    "properties": {
        "username": {
            "type": "string",
            "title": "The username Schema",
            "examples": [
                "mike7", "some_username"
            ]
        },
        "password": {
            "type": "string",
            "title": "The password Schema",
            "examples": [
                "123"
            ]
        }
    },
    "examples": [{
        "username": "mike7",
        "password": "123",
        "firstName": "mike",
        "lastName": "kush",
        "email": "mike@gmail.com",
        "authorBio": "Tall and handsome"
    }],
    "additionalProperties": false
}
